{
    "default": {
        "requireModule": ["ts-node/register"],
        "paths": [
            "src/tests/features/**/*.feature"
        ],
        "require": [
            "src/tests/stepsDefinitions/**/*.ts",
            "src/tests/hook/*.ts"
        ],

        "formatOptions": {
            "snippetInterface": "async-wait"
        },
        "publishQuiet": true,
        "dryRun": false,
        "format": [
            "progress",
            "json:reports/cucumber-report.json",
            "html:reports/cucumber-report.html"
        ]
    }
}